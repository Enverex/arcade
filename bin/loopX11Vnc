#!/bin/sh

export DISPLAY=:0
#vncProg='x11vnc'
vncProg='x0vncserver'

function vncLoop {
	while true; do
		## Make sure we're the only copy
		pkill ${vncProg}
		sleep 1

		## Make sure X is actually running first
		if [[ $(pidof Xorg) ]]; then
			echo "Running VNC."
			${vncProg} -rfbauth /home/arcade/.config/x11vnc/passwd >/dev/null 2>&1
		else
			## X isn't running, abort
			echo "X not detected, exiting."
			exit
		fi

		## Don't loop too fast
		sleep 5
	done
}

#export -f vncLoop
#flock -w 5 -x -n /tmp/vncLock -c vncLoop

while true; do ${vncProg} -MaxProcessorUsage 90 -SecurityTypes VncAuth -rfbauth /home/arcade/.config/x11vnc/passwd >/dev/null 2>&1; done
